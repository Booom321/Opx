{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/Output/Build/${presetName}",
      "installDir": "${sourceDir}/Output/Install/${presetName}",
      "cacheVariables": {
        "BUILD_SHARED_LIBS": "OFF",
        "CXX_STANDARD": "17",
        "C_STANDARD": "11"
      }
    },
    {
      "name": "debug-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },

    {
      "name": "windows-base",
      "hidden": true,
      "inherits": "base",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "debug-x64",
      "inherits": ["windows-base", "debug-base"],
      "architecture": {
        "value": "x64",
        "strategy": "external"
      }
    },
    {
      "name": "release-x64",
      "inherits": ["windows-base", "release-base"],
      "architecture": {
        "value": "x64",
        "strategy": "external"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build-windows-x64-debug",
      "configurePreset": "debug-x64"
    },
    {
      "name": "build-windows-x64-release",
      "configurePreset": "release-x64"
    }
  ]
}
